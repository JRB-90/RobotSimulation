<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaApp.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:idc="clr-namespace:Dock.Avalonia.Controls;assembly=Dock.Avalonia"
		xmlns:controls="clr-namespace:AvaloniaApp.Controls;assembly=AvaloniaApp"
		xmlns:design="clr-namespace:AvaloniaApp.Design;assembly=AvaloniaApp"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		d:DataContext="{x:Static design:DesignData.MainWindowVM}"
        x:Class="AvaloniaApp.Views.MainWindow"
		WindowStartupLocation="CenterScreen"
		ExtendClientAreaToDecorationsHint="True"
        ExtendClientAreaChromeHints="NoChrome"
        ExtendClientAreaTitleBarHeightHint="-1"
        Title="JSim Avalonia">

	<DockPanel
		HorizontalAlignment="Stretch"
		VerticalAlignment="Stretch"
		LastChildFill="True">
		
		<controls:JSimTitleBar
			DockPanel.Dock="Top"
			IsSeamless="True"/>

		<idc:DockControl Layout="{Binding Layout}"/>
	</DockPanel>
</Window>
