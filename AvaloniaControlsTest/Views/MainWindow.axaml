<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaControlsTest.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:controls="clr-namespace:JSim.Avalonia.Controls;assembly=JSim.Avalonia"
        xmlns:conv="clr-namespace:JSim.Avalonia.Converters;assembly=JSim.Avalonia"
		xmlns:design="clr-namespace:AvaloniaControlsTest.Design;assembly=AvaloniaControlsTest"
		mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="400"
		d:DataContext="{x:Static design:DesignData.MainWindowVM}"
        x:Class="AvaloniaControlsTest.Views.MainWindow"
		Width="400" Height="400"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaControlsTest">

	<Grid
		ColumnDefinitions="*, *">
		
		<ScrollViewer
			Grid.Column="0"
			HorizontalScrollBarVisibility="Auto"
			VerticalScrollBarVisibility="Auto">
			<ContentControl
				Content="{Binding SceneTreeVM}"/>
		</ScrollViewer> 

		<ScrollViewer
			Grid.Column="1"
			HorizontalScrollBarVisibility="Auto"
			VerticalScrollBarVisibility="Auto">
			<ContentControl
				Content="{Binding SceneObjectVM}"/>
		</ScrollViewer>
	</Grid>
</Window>
