<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		     xmlns:design="clr-namespace:JSim.Avalonia.Design;assembly=JSim.Avalonia"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="400"
			 d:DataContext="{x:Static design:DesignData.SceneObjectVM}"
             x:Class="JSim.Avalonia.Views.SceneObjectView">
	<Grid
		RowDefinitions="Auto, Auto"
		ColumnDefinitions="Auto"> 
		
		<ContentControl
			Grid.Row="1"
			Grid.Column="0"
			Margin="5"
			Content="{Binding SceneObjectBaseDataVM}"/>

		<ContentControl
			Grid.Row="2"
			Grid.Column="0"
			Margin="5"
			Content="{Binding SceneObjectTypeDataVM}"/>
	</Grid>
</UserControl>
